{
  "name": "alarmist-webpack",
  "version": "1.0.5",
  "description": "Wrap webpack watch in alarmist jobs",
  "bin": "bin/index.js",
  "main": "lib/index.js",
  "scripts": {
    "cmd:lint": "eslint .",
    "cmd:test": "cross-env NODE_ENV=test nyc mocha",
    "cmd:coverage": "nyc report && nyc check-coverage",
    "cmd:build": "babel src --out-dir lib",
    "cmd:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "run-s cmd:lint cmd:test cmd:coverage",
    "build": "run-s test cmd:build",
    "ci": "run-s build cmd:coveralls",
    "alarmist:lint": "alarmist-job -n lint run-s -s cmd:lint",
    "alarmist:test": "alarmist-job -n test run-s -s cmd:test",
    "alarmist:coverage": "alarmist-job -n coverage run-s -s cmd:coverage",
    "alarmist:build": "alarmist-job -n build run-s -s cmd:build",
    "watch:lint": "chokidar \"+(src|test)/**/*\" -c \"run-s -s alarmist:lint\"",
    "watch:test": "chokidar \"+(src|test)/**/*\" -c \"run-s -s -c alarmist:test alarmist:coverage\"",
    "watch:build": "chokidar \"src/**/*\" -c \"run-s -s alarmist:build\"",
    "watch:alarmist": "run-p -s watch:lint watch:test watch:build",
    "start": "cross-env FORCE_COLOR=true alarmist-monitor run-s -s watch:alarmist",
    "watch": "chokidar '+(src|test)/**/*' -c 'npm run -s build'",
    "prepublish": "run-s cmd:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghalliday/alarmist-webpack.git"
  },
  "keywords": [],
  "author": "Peter Halliday <pghalliday@gmail.com> (http://pghalliday.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghalliday/alarmist-webpack/issues"
  },
  "homepage": "https://github.com/pghalliday/alarmist-webpack#readme",
  "devDependencies": {
    "alarmist": "^1.0.8",
    "babel-cli": "^6.22.2",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-env": "^1.1.8",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-config-google": "^0.7.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "minimist": "^1.2.0"
  }
}
